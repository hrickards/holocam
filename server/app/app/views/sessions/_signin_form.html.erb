<div id="session" class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= t 'label.sign_in_up' %></h3>
	</div>
	<div class="panel-body">
		<%= form_tag sessions_path, id: "traditional_authentication", method: "post", class: "form-horizontal col-sm-8" do %>
			<div class="form-group">
				<label for="email" class="col-sm-3 control-label"><%= t 'label.email' %></label>
				<div class="col-sm-9">
					<input type="email" class="form-control" name="email" id="email" placeholder="<%= t 'label.email_placeholder' %>">
				</div>
			</div>
			<div class="form-group">
				<label for="password" class="col-sm-3 control-label"><%= t 'label.password' %></label>
				<div class="col-sm-9">
					<input type="password" class="form-control" name="password" id="password" placeholder="<%= t 'label.password_placeholder' %>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-9">
					<button type="submit" class="btn btn-default"><%= t 'button.sign_in' %></button>
					<button type="submit" class="btn btn-default"><%= t 'button.sign_up' %></button>
				</div>
			</div>
		<% end %>

		<div class="col-sm-offset-1 col-sm-3">
			<a class="btn btn-block btn-social btn-twitter" id="twitter" href="<%= oauth_signin_path :twitter %>">
				<i class="fa fa-twitter"></i> <%= t 'button.twitter_sign_in' %>
			</a>
			<a class="btn btn-block btn-social btn-facebook" id="facebook" href="<%= oauth_signin_path :facebook %>">
				<i class="fa fa-facebook"></i> <%= t 'button.facebook_sign_in' %>
			</a>
			<a class="btn btn-block btn-social btn-google-plus" id="google" href="<%= oauth_signin_path :google_oauth2 %>">
				<i class="fa fa-google"></i> <%= t 'button.google_sign_in' %>
			</a>
		</div>
	</div>
</div>
